def max(arr):
    smax = max = arr[0]
    for i in range(1, len(arr)):
        if arr[i] > max:
            smax = max
            max = arr[i]
        elif arr[i] < max :
            if arr[i] > smax:
                smax = arr[i]
            elif max == smax:
                smax = arr[i]
    print(f" max {max}, second max {smax}")
max([10,5,20,8])
max([20,10,20,8,12])
max([10,10,10,1,0,2])
